<% var title = 'Edit User' %>
<% include ../head %>
<div id="crumbs"><a href="/admin">admin</a> > <a href="view-users">view users</a> > edit user</div>
<form method="POST" action="edit-user" onsubmit="return validate()">
    <input type="hidden" name="userId" value="<%= userId %>"/>
    <input type="hidden" name="userNameCheck" value="<%= userName %>"/>
    <table>
        <tr>
            <td> <label for="userName">User Name</label></td>
            <td><input id="userName" type="text" name="userName" class="required" value="<%= userName %>"></td>
        </tr>
        <tr>
            <td><label for="firstName">First Name</label></td>
            <td><input id="firstName" type="text" name="firstName" class="required" value="<%= firstName %>"></td>
        </tr>
        <tr>
            <td><label for="lastName">Last Name</label></td>
            <td><input id="lastName" type="text" name="lastName" class="required" value="<%= lastName %>"></td>
        </tr>
        <tr>
            <td><label for="enabled">Enabled</label></td>
            <td><input id="enabled" name="enabled" type="checkbox" <%= checked %> name="enabled"></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="Update User"></td>
        </tr>
    </table>
</form>
<% include ../foot %>